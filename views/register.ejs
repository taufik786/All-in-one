<%- include('../static/common/header') -%>
    <html>

    <head>
        <link rel="stylesheet" href="../static/css/register.css">
    </head>

    <body>
        <div class="bg-white">
            <article class="card-body">
                <form action="/register" method="POST">
                    <h4 class="card-title mt-3 text-center">Create Account</h4>
                    <% if(typeof err !='undefined' ) {%>
                        <div class="alert alert-dismissible alert-danger">
                            <button type="submit" class="close" data-dismiss="alert">&times;</button>
                            <strong>
                                <%= err%>
                            </strong>
                        </div>
                        <% } %>
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                                </div>
                                <input class="form-control" name="name" placeholder="Full name" type="text" value="<%= typeof name !='undefined' ? name : '' %>">

                            </div>
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                                </div>
                                <input name="email" class="form-control" placeholder="Email address" type="email" value="<%= typeof email !='undefined' ? email : '' %>">

                            </div>
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
                                </div>
                                <input name="phone" class="form-control" placeholder="Phone number" type="text" value="<%= typeof phone !='undefined' ? phone : '' %>">
                            </div>
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                                </div>
                                <input name="password" class="form-control" placeholder="Enter password"
                                    type="password">
                            </div>
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                                </div>
                                <input name="cnfpassword" class="form-control"
                                    placeholder="Confirm password" type="password">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block"> Create Account </button>
                            </div>
                            <p class="text-center">Have an account? <a href="/login">Log In</a> </p>

                            <p class="divider-text">
                                <span class="bg-light">OR</span>
                            </p>

                            <p>
                                <a href="" class="btn btn-block btn-facebook"> <i class="fab fa fa-facebook-f"></i>  
                                    Login via
                                    facebook</a>
                            </p>
                            <p>
                                <a href="" class="btn btn-block btn-google"> <i class="fab fa fa-google"></i>   Login
                                    via
                                    google</a>
                            </p>
                </form>
            </article>
        </div>
    </body>

    </html>